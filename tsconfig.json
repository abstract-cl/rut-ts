{
  "compilerOptions": {
      "target": "es2020",
      "removeComments": true,
      "watch": true,
      "module": "commonjs",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "alwaysStrict": true,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "lib": [
          "es2020",
          "esnext.asynciterable"
      ],
      "sourceMap": true,
      "baseUrl": "."
  },
  "include": [
      "./lib/**/*.ts",
      "./test/**/*.ts"
  ],
  "exclude": [
      "./node_modules",
  ]
}
