{
  "name": "rut-ts",
  "version": "1.0.0",
  "description": "NPM library to validate and format RUT (Chilean identification number)",
  "main": "./lib/index.ts",
  "module": "./dist/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "tsc": "tsc -p tsconfig.publish.json",
    "lint": "eslint --report-unused-disable-directives ./lib/** ./test/** --ext .ts",
    "prettier": "prettier --write lib/**/*.ts test/**/*.ts",
    "test": "nyc --reporter=html mocha -r ts-node/register 'test/**/*.ts' --exit",
    "prepublish": "npm run tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abstract-cl/rut-ts.git"
  },
  "keywords": [
    "lib"
  ],
  "author": "Abstract",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abstract-cl/rut-ts/issues"
  },
  "homepage": "https://github.com/abstract-cl/rut-ts#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@abstract-cl"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chai": "^4.2.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
